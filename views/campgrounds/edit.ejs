<% include ../partials/header.ejs %>

<h1 id="newCampground">Edit <%= campground.name%></h1>
<div class="row">
    <div id="Form">
        <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
            <div class="form-group"><input class="form-control" placeholder="Name" value ="<%= campground.name%>" type="text" name="campground[name]"></div>
            <div class="form-group"><input class="form-control" placeholder="Image URL" value="<%= campground.imgUrl%>" type="text" name="campground[imgUrl]"></div>
            <div class="form-group">
                    <label for="exampleFormControlTextarea1"><strong>Description</strong></label>
                    <textarea name="campground[description]" class="form-control" id="exampleFormControlTextarea1" rows="3"><%= campground.description%></textarea>
            </div>
            <div class="form-group"><input class="form-control btn btn-primary" type="submit" text="Submit"></div>
        </form>
    </div>
</div>
<% include ../partials/footer.ejs %>